@model SafeSurroundings.Models.HomeViewModel

<h2>@ViewBag.Title</h2>
<h3>@ViewBag.Message</h3>

<div class="container active">
    <div class="container">
        <table class="table table-hover" style="background-color:rgb(52, 235, 177);color:black">
            <thead>
                <tr>
                    @if (Model != null)
                    {
                        <th>Welcome @Model.DisplayName</th>
                    }
                </tr>
                <tr>
                </tr>
            </thead>
        </table>
    </div>

    <div class="container">
        <table class="table-hover" style="background-color:rgb(52, 235, 177);color:black" >
            <tr class="col-md-7">
                @if ((Model.ListofMeetups != null) && (Model.ListofMeetups.Any()))
                {
                    foreach (var meetups in Model.ListofMeetups)
                    {
            <tr>
                <td style="border:solid;">
                    @meetups.PlaceID
                </td>
                <td style="border:solid;">
                    @Model.FormatDate(meetups.MeetTime  )
                </td>
                <td style="border:solid;">
                    @Model.FormatTime(meetups.MeetTime) 
                </td>
            </tr>

                }
            }
            </table>
            @Html.ActionLink("Places", "Index", "Places")
        </div>
    </div>
